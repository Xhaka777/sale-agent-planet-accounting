                android:background="#C6C6C6" />

            <LinearLayout
                android:id="@+id/aboutSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/saleComp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="start|center"
                    android:text="Sales : sale@planetaccounting.org"
                    android:textAllCaps="false"
                    android:textSize="16sp" />
                <!--                    android:drawableStart="@drawable/ic_baseline_point_of_sale_24"-->
                <!--                    android:drawableLeft="@drawable/ic_baseline_point_of_sale_24" />-->

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C6C6C6" />

            <LinearLayout
                android:id="@+id/aboutHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/helpComp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="start|center"
                    android:text="Help : support@planetaccounting.org"
