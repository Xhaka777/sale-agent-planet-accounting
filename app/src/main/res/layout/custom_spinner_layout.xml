<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/customSpinnerItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/customSpinnerIcon"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSpinnerLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_euro"/>

        <TextView
            android:id="@+id/tvSpinnerLayout"
            android:layout_width="237dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="Androchunk"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/black"/>

    </LinearLayout>

<!--  S'esht qe na vyne najsen....  -->
    <ImageView
        android:id="@+id/customSpinnerIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp" />

</RelativeLayout>